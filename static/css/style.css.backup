/* 基础样式重置 */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    line-height: 1.6;
    color: #333;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    background-color: #f9f9f9;
}

/* 头部样式 */
header {
    padding: 2rem 0;
    border-bottom: 1px solid #e0e0e0;
    margin-bottom: 2rem;
}

header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #2c3e50;
}

/* 导航样式 */
nav {
    margin: 1rem 0 2rem;
}

nav ul {
    display: flex;
    list-style: none;
    gap: 1.5rem;
}

nav a {
    text-decoration: none;
    color: #3498db;
    font-weight: 500;
}

nav a:hover {
    color: #2980b9;
}

/* 主内容区样式 */
main {
    min-height: 60vh;
}

/* 文章列表样式 */
article {
    background: white;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

article h2 {
    margin-bottom: 0.5rem;
    color: #2c3e50;
}

article h2 a {
    text-decoration: none;
    color: inherit;
}

article h2 a:hover {
    color: #3498db;
}

article time {
    color: #7f8c8d;
    font-size: 0.9rem;
    margin-bottom: 1rem;
    display: block;
}

/* 分页样式 */
.pagination {
    display: flex;
    justify-content: center;
    margin: 2rem 0;
    gap: 1rem;
}

.pagination a {
    padding: 0.5rem 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    text-decoration: none;
    color: #3498db;
}

/* 页脚样式 */
footer {
    text-align: center;
    padding: 2rem 0;
    margin-top: 3rem;
    border-top: 1px solid #e0e0e0;
    color: #7f8c8d;
}